{% extends 'base.html.twig' %}

{% block title %} Liste des Arcs {% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1> Liste des Arcs  </h1>
            </div>
            {% for arc in pagination %}
                <div class="col-4 mt-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title">{{ arc.nomA }}</h2>
                            <a href="{{ path('arc_details', {'nom_a': arc.nomA}) }}" class="btn btn-primary"> Voir l'Arc</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {{ knp_pagination_render(pagination) }}
        </section>
    </main>
{% endblock %}
